<section class="section">
  <div class="title">Sign in</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", type: "text", placeholder: "Your email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input is-info", type: "password", placeholder: "Your password" %>
    </div>

    <% if devise_mapping.rememberable? %>

      <div class="field">
        <div class="checkbox">
          <%= f.check_box :remember_me, type: "checkbox" %>
          <%= f.label :remember_me, type: "checkbox" %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in", class: "button is-warning" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>