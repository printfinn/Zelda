<% provide(:page_title, t('.sign_in')) %>
<section class="section">
  <div class="container">
    <div class="title"><%= t(:sign_in) %></div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", type: "text" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input is-info", type: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>

        <div class="field">
          <div class="checkbox">
            <%= f.check_box :remember_me, type: "checkbox" %>
            <%= f.label :remember_me, type: "checkbox" %>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: "button is-warning" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
