<section class="section">
  <div class="container">
    <div class="title">Modify <%= resource_name.to_s.humanize %> Profile</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", type: "text", placeholder: "New Email Address" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :current_password, "Current password", class: "label required-field" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input is-info", type: "password", placeholder: "Your current password (Required)" %>
      </div>

      <div class="field">
        <%= f.label :password , "New Password", class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input is-info", type: "password", placeholder: "(Optional)" %>
        <% if @minimum_password_length %>
          <em>(At least <%= @minimum_password_length %> characters)</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-info", type: "password", placeholder: "(Optional)" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "button is-info" %>
      </div>
    <% end %>
  </div>

  
  <div class="container">
    <div class="title is-4">Danger Zone</div>
    <div class="content bordered is-medium">
      <div class="level">
        <div class="level-left">
          <p class="level-item">Delete your account</p>
        </div>
        <div class="level-right">
          <div class="level-item">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger is-normal" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>