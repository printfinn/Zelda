<header>
  <nav class="navbar is-success is-fixed-top">
    <div class="navbar-brand">
      <%= link_to "Smart Garage", root_path, class: "navbar-item" %>
      <span class="navbar-burger burger" data-target="navbarMenuHeroC">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </div>

    <div id="navbarMenuHeroC" class="navbar-menu">
      <div class="navbar-start">
        <div class="navbar-item">
          <%= link_to "Home", root_path, class: "navbar-item" %>
          <% if user_signed_in? %>
            <%= link_to "My Profile", edit_user_registration_path, class: "navbar-item" %>
          <% end %>
        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <% if user_signed_in? %>
            <%= button_to "Sign out", destroy_user_session_path, method: "delete", class: "button is-light" %>
          <% end %>

          <% unless user_signed_in? %>
            <div class="buttons">
              <%= button_to "Sign In", new_user_session_path, method: "get", class: "button is-warning" %>
              <%= button_to "Try It For Free!", new_user_registration_path, method: "get", class: "button is-light" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
