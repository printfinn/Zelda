<header>
  <nav class="navbar is-warning is-fixed-top">
    <div class="container">

      <div class="navbar-brand">
        <%= link_to t(:smart_home), root_path, class: "navbar-item" %>
        <span class="navbar-burger burger" data-target="navbarMenuHeroC">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </div>

      <div id="navbarMenuHeroC" class="navbar-menu">

        <div class="navbar-start">
          <div class="navbar-item">
            <%= link_to t(:home), root_path, class: "navbar-item" %>
            <%#= link_to "Documentation", static_pages_documentation_path, class: "navbar-item" %>
            <% if user_signed_in? %>
              <%#= link_to "Control Center", devices_path, class: "navbar-item" %>
              <%= link_to t(:my_profile), edit_user_registration_path, class: "navbar-item" %>
            <% end %>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <% if user_signed_in? %>
              <%= button_to t(:sign_out), destroy_user_session_path, method: "delete", class: "button is-light" %>
            <% end %>

            <% unless user_signed_in? %>
              <div class="buttons">
                <%= button_to t(:sign_in), new_user_session_path, method: "get", class: "button is-warning" %>
                <%= button_to t(:sign_up), new_user_registration_path, method: "get", class: "button is-light" %>
              </div>
            <% end %>
          </div>
        </div>

      </div>

    </div>
  </nav>
</header>
