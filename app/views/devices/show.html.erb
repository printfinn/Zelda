<% provide(:page_title, @device.device_name) %>
<% provide(:nav_title, @device.device_name) %>
<section class="section">
  <div class="container">
    <%= render 'head_nav' %>
    <div class="box">
      <div class="table-container">
        <table class="table is-striped is-fullwidth">
          <tbody>
            <tr>
              <th><%= t(".device_name") %></th>
              <td><%= @device.device_name %></td>
            </tr>
            <tr>
              <th><%= t(".device_type") %></th>
              <td><%= @device.device_type %></td>
            </tr>
            <tr>
              <th><%= t(".device_location") %></th>
              <td><%= @device.device_location %></td>
            </tr>
            <tr>
              <th><%= t(".on_command") %></th>
              <td><%= @device.on_command %></td>
            </tr>
            <tr>
              <th><%= t(".off_command") %></th>
              <td><%= @device.off_command %></td>
            </tr>
            <tr>
              <th><%= t(".device_order") %></th>
              <td><%= @device.device_order %><%= t(".smaller_is_former") %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <br />
    <div class="buttons is-right">
      <%= button_to "Back", devices_path, method: "get", class: "button is-dark is-normal" %>
      <%= button_to 'Edit', edit_device_path, method: "get", class: "button is-info" %>
      <%= button_to 'Destroy', device_path, method: "delete", class: "button is-danger",
        method: :delete,
        data: { confirm: "This will remove your device:\n\n#{@device.device_name}\n\nYou can't find it back, are you sure?" } %>
    </div>
  </div>
</section>
