<% provide(:page_title, @device.device_name) %>
<section class="section">
  <div class="container">
    <div class="title is-3"><%= @device.device_name %></div>
    <div class="box">
      <div class="table-container">
        <table class="table is-striped is-fullwidth">
          <tbody>
            <tr>
              <th><%= t(".device_name") %></th>
              <td><%= @device.device_name %></td>
            </tr>
            <tr>
              <th><%= t(".device_type") %></th>
              <td><%= @device.device_type %></td>
            </tr>
            <tr>
              <th><%= t(".device_location") %></th>
              <td><%= @device.device_location %></td>
            </tr>
            <tr>
              <th><%= t(".on_command") %></th>
              <td><%= @device.on_command %></td>
            </tr>
            <tr>
              <th><%= t(".off_command") %></th>
              <td><%= @device.off_command %></td>
            </tr>
            <tr>
              <th><%= t(".device_order") %></th>
              <td><%= @device.device_order %><%= t(".smaller_is_former") %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <br />
    <div class="buttons is-right">
      <%= link_to t(".edit"), edit_device_path, class: "button is-info" %>
      <%= button_to t(".destroy"), device_path, class: "button is-danger",
        method: :delete,
        data: { confirm: t(".confirmation", device_name: @device.device_name) } %>
    </div>
  </div>
</section>
